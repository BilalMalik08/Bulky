@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Your Password?";
}

<div class="bg-primary text-white p-3">
    <h1 class="text-center">
        <i class="bi bi-lock"></i> @ViewData["Title"]
    </h1>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-8 bg-white p-4 shadow-sm rounded">
            <h2 class="text-center">
             Enter your email
            </h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="background-color: #3a595c; padding: 1rem; border-radius: .25rem;" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">
                    <i class="bi bi-lock"></i> Reset Password
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
