@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container my-5 bg-primary p-4 rounded">
    <header class="text-center">
        <i class="bi bi-envelope-fill text-white fs-1"></i>
        <h1 class="text-white mt-3">@ViewData["Title"]</h1>
        <p class="text-white">Please check your email to reset your password.</p>
    </header>
</div>
