@model Product

@{
    ViewData["Title"] = "Product Details";
}

<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase fw-500" style="font-size: 2rem;">@Model.Title</h3>
                    <p class="text-warning fw-400 mb-0" style="font-size: 1.25rem;">by <span>@Model.Author</span></p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-secondary bg-gradient mb-5 fw-500 btn-sm text-uppercase" style="font-size: 1rem; padding: 0.5rem 1rem;">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge bg-secondary fw-500" style="font-size: 1rem;">@Model.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark fw-400" style="font-size: 1rem;">ISBN : @Model.ISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark fw-400 pb-2" style="font-size: 1rem;">
                                List Price:
                                <span class="text-decoration-line-through">
                                    @Model.ListPrice.ToString("c")
                                </span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-2 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark fw-500" style="font-size: 1rem;">Quantity</div>
                            </div>
                            <div class="p-2 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark fw-500" style="font-size: 1rem;">1-50</div>
                            </div>
                            <div class="p-2 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark fw-500" style="font-size: 1rem;">51-100</div>
                            </div>
                            <div class="p-2 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark fw-500" style="font-size: 1rem;">100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-2 col-3 col-lg-2 bg-white text-warning fw-500" style="font-size: 1rem;">
                                <div>1</div>
                            </div>
                            <div class="p-2 col-3 col-lg-2 bg-white text-warning fw-500" style="font-size: 1rem;">
                                <div>@Model.Price.ToString("c")</div>
                            </div>
                            <div class="p-2 col-3 col-lg-2 bg-white text-warning fw-500" style="font-size: 1rem;">
                                <div>@Model.Price50.ToString("c")</div>
                            </div>
                            <div class="p-2 col-3 col-lg-2 bg-white text-warning fw-500" style="font-size: 1rem;">
                                <div>@Model.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm" style="font-size: 1.125rem;">@Model.Description</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-500" style="font-size: 1rem;"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input type="number" value="1" class="form-control text-end" style="font-size: 1rem;"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled
                                        class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-500"
                                        style="font-size: 1rem;">
                                    Add to Cart (Coming Soon...)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>