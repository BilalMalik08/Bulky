@{
    ViewData["Title"] = "Product Page";
}

@model List<Product>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary">
                <i class="bi bi-list me-2"></i>Product List
            </h2>
        </div>
        <div class="col-md-6 text-md-end text-center">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Products</h5>
        </div>
        <div class="card-body p-2">
            <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                <table id="tblData" class="table table-bordered table-striped mb-0">
                    <thead class="bg-light text-dark">
                        <tr class="align-middle">
                            <th class="text-center" style="width: 25%; min-width: 150px;">Title</th>
                            <th class="text-center" style="width: 15%; min-width: 150px;">ISBN</th>
                            <th class="text-center" style="width: 10%; min-width: 150px;">Price</th>
                            <th class="text-center" style="width: 15%; min-width: 150px;">Author</th>
                            <th class="text-center" style="width: 20%; min-width: 150px;">Category</th>
                            <th class="text-center" style="width: 15%; min-width: 150px;">Action Buttons</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td class="text-center p-2">@product.Title</td>
                                <td class="text-center p-2">@product.ISBN</td>
                                <td class="text-center p-2">@product.ListPrice</td>
                                <td class="text-center p-2">@product.Author</td>
                                <td class="text-center p-2">@product.Category</td>
                                <td class="text-center p-2">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-secondary btn-sm me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Product.js"></script>
}

<style>
    .table-responsive::-webkit-scrollbar {
        display: none;
    }

    .table-responsive {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .BTN-EDIT, .BTN-DELETE {
        width: 75px;
        margin: 1px;
        border-radius: 5px;
        display: inline-block;
    }

   
    table.dataTable tbody td,
    table.dataTable thead th {
        text-align: center; 
        vertical-align: middle; 
    }

       
        table.dataTable tbody td .btn {
            display: inline-block; 
            margin: 0 2px;
        }

    
    table.dataTable thead th {
        background-color: #f8f9fa;
        color: #343a40; 
    }
</style>