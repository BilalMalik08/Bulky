@{
    ViewData["Title"] = "Category Page";
}

@model List<Category>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary">
                <i class="bi bi-list me-2"></i>Category List
            </h2>
        </div>
        <div class="col-md-6 text-md-end text-center">
            <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Categories</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                <!-- Reduced max-height -->
                <table class="table table-bordered table-striped mb-0">
                    <thead class="thead-secondary">
                        <tr class="align-middle" style="font-weight: 500;">
                            <th class="text-center" style="width: 33%; min-width: 175px;">Category Name</th>
                            <th class="text-center" style="width: 33%; min-width: 175px;">Display Order</th>
                            <th class="text-center" style="width: 33%; min-width: 150px;">Action Buttons</th>
                        </tr>
                    </thead>
                    <tbody style="font-weight: 400;">
                        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                        {
                            <tr class="align-middle text-center">
                                <td class="py-1">@obj.Name</td>
                                <td class="py-1">@obj.DisplayOrder</td>
                                <td class="py-1">
                                    <div class="d-flex justify-content-center">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-1 d-inline-flex align-items-center justify-content-center" style="height: 30px; width: 100px; ">
                                            <i class="bi bi-pencil-square me-1"></i> Edit
                                        </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-1 d-inline-flex align-items-center justify-content-center" style="height: 30px; width: 100px; ">
                                            <i class="bi bi-trash-fill me-1"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-responsive::-webkit-scrollbar {
        display: none;
    }

    .table-responsive {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .container {
        overflow: hidden;
    }
</style>
