@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Category Page";
}

<style>
    /* Custom class to hide scrollbar */
    .hide-scrollbar::-webkit-scrollbar {
        display: none;
    }

    .hide-scrollbar {
        -ms-overflow-style: none; /* Internet Explorer 10+ */
        scrollbar-width: none; /* Firefox */
    }
</style>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-md-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-md-6 text-md-end text-center">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <div class="table-responsive hide-scrollbar" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center" style="width: 33%; min-width: 175px;">Category Name</th>
                    <th class="text-center" style="width: 33%; min-width: 175px;">Display Order</th>
                    <th class="text-center" style="width: 33%; min-width: 150px;">Action Buttons</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
                {
                    <tr class="align-middle">
                        <td class="text-center" style="font-weight: 400;">@obj.Name</td>
                        <td class="text-center" style="font-weight: 400;">@obj.DisplayOrder</td>
                        <td class="text-center" style="font-weight: 400;">
                            <div class="d-flex justify-content-center">
                                <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 d-inline-flex align-items-center" style="width: 110px;">
                                    <i class="bi bi-pencil-square me-2"></i> Edit
                                </a>
                                <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2 d-inline-flex align-items-center" style="width: 110px;">
                                    <i class="bi bi-trash-fill me-2"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
